<?xml version="1.0"?>
<t t-name="account.report_invoice_document">
	<t t-call="report.external_layout">
		<div class="page">
			<div class="row">
				<div class="col-xs-5 col-xs-offset-0" style="border:1px dotted gray;">
					<p style="font-size:8px"> sett.le</p>
					<address style="margin-top:20px;" t-field="o.partner_id"
						t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}" />
					<span t-if="o.partner_id.vat">
						VAT:
						<span t-field="o.partner_id.vat" />
					</span>
				</div>
				<div class="col-xs-5 col-xs-push-2" style="border:1px dotted gray;">
					<p style="font-size:8px">destinazione se diversa dal destinatario</p>
				</div>
			</div>
			<div class="row mt32 mb0">
				<div class="col-xs-1" style="background-color:#D8D8D8; border:1px solid black;line-height:100%;min-height:30px;">
					<strong style="font-size:8px;position: absolute;left:0">Tipo doc:</strong><br />
					<p
						t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</p>
					<p t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</p>
					<p t-if="o.type == 'out_invoice' and o.state == 'draft'">Bozza</p>
					<p t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancellata</p>
					<p t-if="o.type == 'out_refund'">Refund</p>
					<p t-if="o.type == 'in_refund'">Supplier Refund</p>
					<p t-if="o.type == 'in_invoice'">Supplier Invoice</p>
				</div>
				<div class="col-xs-1" style="background-color:#D8D8D8; border:1px solid black;line-height:100%;min-height:30px;">
					<strong style="font-size:8px;position: absolute;left:0" >Numero:</strong><br />
					<p t-field="o.number" />
				</div>
				<div class="col-xs-2" style="background-color:#D8D8D8; border:1px solid black;line-height:100%;min-height:30px;">
					<strong style="font-size:8px;position: absolute;left:0">Invoice Date:</strong><br />
					<p t-field="o.date_invoice" style="text-align: center;" />
				</div>
				<div class="col-xs-1"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Ordine N:</strong><br />
					<p t-field="o.reference" />
				</div>
                <div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Consegna a mezzo:</strong><br />
					<!--<p t-field="o.reference" />-->
				</div>
                <div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Condizioni di pagamento:</strong><br />
					<p t-field="o.payment_term" />
				</div>
                 <div class="col-xs-1"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Zona:</strong><br />
                  <!-- <p t-field="o.payment_term" /> -->
				</div> 
				 <div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Agente:</strong><br />
                     <p t-field="o.user_id" />
				</div>            
			</div>
			<div class="row  mt0 mb0">
				<div class="col-xs-7"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Informazioni aggiuntive:</strong><br />
					<p t-field="o.comment" />
				</div>
				<div class="col-xs-5"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Banca d'appoggio:</strong><br />
<!-- 					<p t-field="o.comment" /> -->
				</div>
			</div>
			<div class="row  mt0 mb32">
				<div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Causale del vettore:</strong><br />
<!-- 					<p t-field="o.comment" /> -->
				</div>
				<div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Inizio del trasporto:</strong><br />
<!-- 					<p t-field="o.comment" /> -->
				</div>
				<div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Vettore:</strong><br />
<!-- 					<p t-field="o.comment" /> -->
				</div>
				<div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Residenza del vettore:</strong><br />
<!-- 					<p t-field="o.comment" /> -->
				</div>
				<div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Data e ora ritiro:</strong><br />
<!-- 					<p t-field="o.comment" /> -->
				</div>
				<div class="col-xs-2"  style="border:1px solid black;line-height:100%;min-height:40px;">
					<strong style="font-size:8px;position: absolute;left:0">Firma vettore:</strong><br />
<!-- 					<p t-field="o.comment" /> -->
				</div>
			</div>

			<table class="table table-condensed">
				<thead>
					<tr>
					    <th>Codice art.lo</th>
						<th>Description</th>
						<th>Quantity</th>
						<th class="text-right">Unit Price</th> 
						<th class="text-right" groups="sale.group_discount_per_so_line">Discount (%)</th>
						<th class="text-right">Taxes</th>
						<th class="text-right">Amount</th>
					</tr>
				</thead>
				<tbody class="invoice_tbody">
					<tr t-foreach="o.invoice_line" t-as="l">
					    <td>
							<span t-field="l.product_id.default_code" />
						</td>
						<td>
							<span t-field="l.name" />
						</td>
						<td>
							<span t-field="l.quantity" />
							<span t-field="l.uos_id" groups="product.group_uom" />
						</td>
						<td class="text-right">
							<span t-field="l.price_unit" />
						</td>
						<td class="text-right" groups="sale.group_discount_per_so_line">
							<span t-field="l.discount" />
						</td>
						<td class="text-right">
							<!--<span t-esc="', '.join(map(lambda x: x.name, l.invoice_line_tax_id))" />-->
                                                         <span t-field=" l.product_id.taxes_id.description" />
						</td>
						<td class="text-right">
							<span t-field="l.price_subtotal"
								t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
						</td>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<div class="col-xs-4 pull-right">
					<table class="table table-condensed">
						<tr class="border-black">
							<td>
								<strong>Total Without Taxes</strong>
							</td>
							<td class="text-right">
								<span t-field="o.amount_untaxed"
									t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
							</td>
						</tr>
						<tr>
							<td>Taxes</td>
							<td class="text-right">
								<span t-field="o.amount_tax"
									t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
							</td>
						</tr>
						<tr class="border-black">
							<td>
								<strong>Total</strong>
							</td>
							<td class="text-right">
								<span t-field="o.amount_total"
									t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
							</td>
						</tr>
					</table>
				</div>
			</div>

			<div class="row" t-if="o.tax_line">
				<div class="col-xs-6">
					<table class="table table-condensed">
						<thead>
							<tr>
								<th>Tax</th>
								<th class="text-right">Base</th>
								<th class="text-right">Amount</th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="o.tax_line" t-as="t">
								<td>
									<span t-field="t.name" />
								</td>
								<td class="text-right">
									<span t-field="t.base"
										t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
								</td>
								<td class="text-right">
									<span t-field="t.amount"
										t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>

			<p t-if="o.comment">
				<strong>Comment:</strong>
				<span t-field="o.comment" />
			</p>
			<p t-if="o.payment_term.note">
				<strong>Payment Term:</strong>
				<span t-field="o.payment_term.note" />
			</p>
			<p t-if="o.fiscal_position.note">
				<strong>Fiscal Position Remark:</strong>
				<span t-field="o.fiscal_position.note" />
			</p>
		</div>
	</t>
</t>